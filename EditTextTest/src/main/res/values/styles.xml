<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="OutlinedEditTextTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/text_dark_accent</item>
        <item name="android:textSize">16sp</item>

        <item name="android:textColorHint">@color/edittext_selector</item>
        <item name="boxStrokeColor">@color/edittext_selector</item>

        <item name="android:colorControlNormal">@color/text_dark</item>
        <item name="counterTextColor">@color/theme_primary</item>

        <item name="helperTextTextColor">@color/text_light_not_focused</item>

        <item name="boxStrokeErrorColor">@color/text_dark_negative</item>
        <item name="errorTextColor">@color/text_dark_negative</item>
        <item name="errorIconColor">@color/text_dark_negative</item>
        <item name="counterOverflowTextColor">@color/text_dark_negative</item>
    </style>

    <style name="FilledEditTextTheme" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColor">@color/text_dark_accent</item>
        <item name="android:textSize">16sp</item>

        <item name="android:textColorHint">@color/edittext_selector</item>
        <item name="hintTextColor">@color/edittext_selector</item>
        <item name="boxStrokeColor">@color/edittext_selector</item>

        <item name="android:colorControlNormal">@color/text_dark</item>
        <item name="counterTextColor">@color/theme_primary</item>

        <item name="helperTextTextColor">@color/text_light_not_focused</item>

        <item name="boxStrokeErrorColor">@color/text_dark_negative</item>
        <item name="errorTextColor">@color/text_dark_negative</item>
        <item name="counterOverflowTextColor">@color/text_dark_negative</item>
    </style>

</resources>