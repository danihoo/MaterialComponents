<resources>
    <!-- Base application theme. -->
    <style name="Theme.Material" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryVariant">@color/theme_primary_light</item>
        <item name="colorOnPrimary">@color/theme_primary_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/theme_accent</item>
        <item name="colorSecondaryVariant">@color/theme_accent_light</item>
        <item name="colorOnSecondary">@color/theme_accent_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

    </style>
</resources>