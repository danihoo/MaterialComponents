<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:padding="12dp"
    tools:context=".TestActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <de.danihoo94.www.materialcomponents.MaterialSpinnerOutlined
            android:id="@+id/outlined"
            style="@style/SpinnerTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#dddddd"
            android:hint="Hint"
            android:paddingBottom="24dp"
            app:errorEnabled="true"
            tools:ignore="HardcodedText" />

        <de.danihoo94.www.materialcomponents.MaterialSpinnerOutlined
            android:id="@+id/filled"
            style="@style/SpinnerTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#dddddd"
            android:hint="Hint"
            android:paddingBottom="24dp"
            app:errorEnabled="true"
            app:helperText="I can help you"
            tools:ignore="HardcodedText" />

        <de.danihoo94.www.materialcomponents.MaterialSpinnerFilled
            android:id="@+id/filled2"
            style="@style/SpinnerTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#dddddd"
            android:hint="Test"
            android:paddingBottom="24dp"
            tools:ignore="HardcodedText" />
    </LinearLayout>

</ScrollView>